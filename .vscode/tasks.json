{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "make clean; make",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build_clean",
      "type": "shell",
      "command": "make clean",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build_all",
      "type": "shell",
      "command": "make clean; make",
      "options": { "cwd": "${workspaceFolder}" },
      "dependsOn": ["build_libdaisy", "build_daisysp"],
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "program-dfu",
      "type": "shell",
      "command": "make clean; make; make program-dfu",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build_libdaisy",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/lib/libdaisy/"
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "build_daisysp",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/lib/daisysp/"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
